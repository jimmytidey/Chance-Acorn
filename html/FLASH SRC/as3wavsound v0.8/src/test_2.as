package   {       import flash.display.Sprite;       import flash.events.MouseEvent;       import flash.net.URLLoader;       import flash.net.URLRequest;       import flash.events.Event;       import flash.utils.ByteArray;       import flash.media.Sound;       import org.as3wavsound.WavSound;       import org.as3wavsound.WavSoundChannel;          public final class Mains extends Sprite       {           public final function Mains():void           {               playB.addEventListener(MouseEvent.MOUSE_UP, loadWav);           }              private final function loadWav(e:MouseEvent):void           {               var urlRequest:URLRequest = new URLRequest('Phone.wav');               var wav:URLLoader = new URLLoader();               wav.dataFormat = 'binary';               wav.load(urlRequest);               wav.addEventListener(Event.COMPLETE, playWav);           }              private final function playWav(e:Event):void           {               var tts:WavSound = new WavSound(e.target.data as ByteArray);               tts.play();           }       }   }  